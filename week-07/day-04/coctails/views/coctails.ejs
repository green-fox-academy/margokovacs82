<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" type="text/css" href="/static/coctails.css">
  <title>Cocktails</title>
</head>

<body>
  <div class="container">
    <h1>Cocktails</h1>
    <div class="links">
      <a href="/">All</a>
      <% alcoholList.forEach(e => { %>
        <a href="/?alcohol=<%= e %>">
          <%= e %>
        </a>
        <% }); %>

    </div>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% cocktails.forEach(function(cock){ %>
          <tr>
            <td>
              <div>
                <% let virgin = '';
                if (cock.isAlcoholic === false) {
                  virgin = '(non-alcoholic)'
                };
                %>
                <%= cock.name%>
                <%= virgin%>
              </div>
              <div>
                <%= cock.contains.join(', ')%>
              </div>
            </td>
            <td>
              <%= cock.price%> Ft</td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>

</body>

</html>